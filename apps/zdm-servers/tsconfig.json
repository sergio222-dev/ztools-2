{
  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "strictNullChecks": true,
    "paths": {
      "@zdm/*": ["src/zdm/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*", "backend/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
