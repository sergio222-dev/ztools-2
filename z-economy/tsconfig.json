{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "jest", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@organisms/*": ["src/app/components/organisms/*"],
      "@atoms/*": ["src/app/components/atoms/*"],
      "@molecules/*": ["src/app/components/molecules/*"],
      "@styles/*": ["src/app/components/styles/*"],
      "@page/*": ["src/app/page/*"],
      "@templates/*": ["src/app/templates/*"],
      "@utils/*": ["src/app/utils/*"],
      "@core/*": ["src/core/*"],
    }
  },
  "include": ["src", "test"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
